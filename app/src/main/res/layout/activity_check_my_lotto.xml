<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CheckMyLottoActivity"
    android:background="#2FD3F1FF">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#14FFFFFF">

        <LinearLayout
            android:id="@+id/qwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:fontFamily="@font/bm2"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/left_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/left_arrow"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bm2"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageButton
                    android:id="@+id/right_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_arrow"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>




        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qwe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:id="@+id/border1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/activity_main_basics_ball">

                    <TextView
                        android:id="@+id/ball1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/border2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@+id/border1"
                    android:background="@drawable/activity_main_basics_ball">

                    <TextView
                        android:id="@+id/ball2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/border3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@+id/border2"
                    android:background="@drawable/activity_main_basics_ball">

                    <TextView
                        android:id="@+id/ball3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/border4"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@+id/border3"
                    android:background="@drawable/activity_main_basics_ball">

                    <TextView
                        android:id="@+id/ball4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/border5"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@+id/border4"
                    android:background="@drawable/activity_main_basics_ball">

                    <TextView
                        android:id="@+id/ball5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/border6"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@+id/border5"
                    android:background="@drawable/activity_main_basics_ball">

                    <TextView
                        android:id="@+id/ball6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/n77"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/border6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/border7"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@+id/n77"
                    android:background="@drawable/activity_main_basics_ball">

                    <TextView
                        android:id="@+id/ball7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:fontFamily="@font/scd7"/>
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rr"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="13dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="총판매액"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd4"/>

                    <TextView
                        android:id="@+id/salesAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="1등 당첨 총금액"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd4"/>

                    <TextView
                        android:id="@+id/winningTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="1등 당첨자 수"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd4"/>

                    <TextView
                        android:id="@+id/winner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="1등 당첨 금액"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd4"/>

                    <TextView
                        android:id="@+id/winningAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/scd5"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/close" />

</RelativeLayout>