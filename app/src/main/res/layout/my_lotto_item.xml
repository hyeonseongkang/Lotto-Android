<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_weight="2"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/back1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/activity_main_basics_ball"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/scd4"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/back2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/activity_main_basics_ball"
                android:layout_toRightOf="@+id/back1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:fontFamily="@font/scd4"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/back3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/activity_main_basics_ball"
                android:layout_toRightOf="@+id/back2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:fontFamily="@font/scd4"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/back4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/activity_main_basics_ball"
                android:layout_toRightOf="@+id/back3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:fontFamily="@font/scd4"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/back5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/activity_main_basics_ball"
                android:layout_toRightOf="@+id/back4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/num5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:fontFamily="@font/scd4" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/back6"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/activity_main_basics_ball"
                android:layout_toRightOf="@+id/back5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/num6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:fontFamily="@font/scd4"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>